<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <Button
        android:id="@+id/button_appliance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="0dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:shapeAppearance="@style/HabitListTheme"/>

    <TextView
        android:id="@+id/textView_appliance"
        app:layout_constraintStart_toStartOf="@+id/button_appliance"
        app:layout_constraintBottom_toBottomOf = "@+id/button_appliance"
        app:layout_constraintEnd_toEndOf="@+id/button_appliance"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가전"
        android:textSize="16sp"
        android:textColor="#1A726655"/>

    <ImageView
        android:id="@+id/imageView_appliance"
        app:layout_constraintTop_toTopOf="@+id/button_appliance"
        app:layout_constraintStart_toStartOf="@+id/button_appliance"
        app:layout_constraintBottom_toBottomOf="@+id/button_appliance"
        app:layout_constraintEnd_toEndOf="@+id/button_appliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_question" />

</androidx.constraintlayout.widget.ConstraintLayout>