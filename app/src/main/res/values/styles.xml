<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Habit List theme -->
<style name="HabitListTheme" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">10dp</item>
</style>

    <!-- Alarm Chip theme -->
<style name="AlarmChipTheme" parent="Widget.MaterialComponents.Chip.Choice">

    <item name="rippleColor">@color/appGreenColor</item>
    <item name="chipCornerRadius">120dp</item>
    <item name="chipMinTouchTargetSize">0dp</item>
    <item name="chipStrokeWidth">0dp</item>
    <item name="chipStrokeColor">#000000</item>
    <item name="checkedIconVisible">true</item>
</style>

    <style name="AlarmChipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        ...
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>
</resources>